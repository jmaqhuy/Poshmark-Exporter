{
  "manifest_version": 3,
  "name": "Poshmark Closet Exporter",
  "version": "2.5",
  "description": "Xuất thông tin sản phẩm từ Poshmark, tải ảnh lên Cloudinary và lưu ra file XLSX.",
  "permissions": [
    "storage",      
    "scripting",    
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://poshmark.com/*",
    "https://api.cloudinary.com/*" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "xlsx.full.min.js",
        "images/icon48.png",
        "images/icon128.png"
      ],
      "matches": ["https://poshmark.com/*"]
    }
  ]
}